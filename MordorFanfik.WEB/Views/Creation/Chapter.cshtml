@model MordorFanfik.WEB.ViewModels.CreateChapterViewModel;
<h2>Создание нового произведения</h2>
<form method="post" asp-controller="Creation" asp-action="Chapter">
    <div asp-validation-summary="ModelOnly"></div>
    <div>
        <label asp-for="NameChapter"></label><br />
        <div class="input-group mb-3">
            <input type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
        </div>

    </div>
    <div>
        <label asp-for="TextChapter"></label><br />
        <div class="form-floating">
            <textarea class="form-control" placeholder="Leave a comment here" id="floatingTextarea2" style="height: 400px"></textarea>
        </div>
    </div>
    <button type="submit" class="btn-primary">Создать главу</button>
</form> 